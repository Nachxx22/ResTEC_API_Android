<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.connectionapi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ConnectionAPI"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Agregar la actividad MiActividad -->
        <activity
            android:name=".MiActividad"
            android:exported="false"
            android:label="@string/title_activity_mi_actividad"
            android:theme="@style/Theme.ConnectionAPI" />

        <!-- Agregar otras actividades si es necesario -->

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/actions" />

        <!-- La actividad MainActivity ya está definida aquí -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ConnectionAPI">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
